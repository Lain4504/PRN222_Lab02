@page
@model HuynhNgocTien_SE18B01_A02.Pages.Account.EditModel

@{
    ViewData["Title"] = "Edit Account";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Edit Account</h5>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountData.AccountId" />

            <div class="mb-3">
                <label asp-for="AccountData.AccountName" class="form-label"></label>
                <input asp-for="AccountData.AccountName" class="form-control" />
                <span asp-validation-for="AccountData.AccountName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AccountData.AccountEmail" class="form-label"></label>
                <input asp-for="AccountData.AccountEmail" class="form-control" />
                <span asp-validation-for="AccountData.AccountEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AccountData.AccountPassword" class="form-label">New Password</label>
                <input asp-for="AccountData.AccountPassword" class="form-control" type="password" />
                <span asp-validation-for="AccountData.AccountPassword" class="text-danger"></span>
                <small class="form-text text-muted">Leave blank if you don't want to change the password.</small>
            </div>

            <div class="mb-3">
                <label asp-for="AccountData.AccountRole" class="form-label">Role</label>
                <select asp-for="AccountData.AccountRole" class="form-select">
                    <option value="1">Staff</option>
                    <option value="2">Lecturer</option>
                    <option value="3">Admin</option>
                </select>
                <span asp-validation-for="AccountData.AccountRole" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>