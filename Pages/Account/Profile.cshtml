@page
@model HuynhNgocTien_SE18B01_A02.Pages.Account.ProfileModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="card shadow">
    <div class="card-header">
        <h5 class="mb-0">My Profile</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountData.AccountId" />
            <input type="hidden" asp-for="AccountData.AccountRole" />

            <div class="mb-3">
                <label asp-for="AccountData.AccountName" class="form-label"></label>
                <input asp-for="AccountData.AccountName" class="form-control" />
                <span asp-validation-for="AccountData.AccountName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AccountData.AccountEmail" class="form-label"></label>
                <input asp-for="AccountData.AccountEmail" class="form-control" readonly />
                <span asp-validation-for="AccountData.AccountEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AccountData.AccountPassword" class="form-label">New Password</label>
                <input asp-for="AccountData.AccountPassword" class="form-control" type="password" />
                <span asp-validation-for="AccountData.AccountPassword" class="text-danger"></span>
                <small class="form-text text-muted">Leave blank if you don't want to change the password.</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Role</label>
                <input type="text" class="form-control" value="@(Model.AccountData.AccountRole == 1 ? "Staff" : Model.AccountData.AccountRole == 2 ? "Lecturer" : "Admin")" readonly />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <form method="post" asp-page-handler="Logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>