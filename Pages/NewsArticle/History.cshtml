@page
@model HuynhNgocTien_SE18B01_A02.Pages.NewsArticle.HistoryModel

@{
    ViewData["Title"] = "My News History";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">My News History</h5>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <form asp-action="History" method="get" class="d-flex gap-2">
                    <input type="text" name="searchString" class="form-control" placeholder="Search by title..." value="@ViewBag.CurrentFilter" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
                    {
                        <a asp-action="History" class="btn btn-outline-secondary">Clear</a>
                    }
                </form>
            </div>
        </div>

        @if (Model.Articles.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Created Date</th>
                            <th>Modified Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Articles)
                        {
                            <tr>
                                <td>@item.NewsTitle</td>
                                <td>@item.Category?.CategoryName</td>
                                <td>
                                    @if ((bool)item.NewsStatus!)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Draft</span>
                                    }
                                </td>
                                <td>@item.CreatedDate?.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>@item.ModifiedDate?.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.NewsArticleId" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.NewsArticleId" 
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="confirmDelete('@item.NewsArticleId')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No news articles found in your history.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this article?')) {
                $.post('@Url.Action("Delete")', { id: id }, function() {
                    window.location.reload();
                });
            }
        }
    </script>
} 